<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="10" style="-fx-padding: 10;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.globemed.healthcare.controller.BillingController">
	<children>
		<Label styleClass="login-title" text="Billing and Insurance Claims">
			<font><Font name="System Bold" size="18.0" /></font>
		</Label>

		<HBox alignment="CENTER_LEFT" spacing="10">
			<Label text="Select Patient:" />
			<ComboBox fx:id="patientComboBox" prefWidth="250.0" promptText="Choose patient" />
			<Button fx:id="newBillButton" onAction="#handleNewBill" style="-fx-background-color: #0f172a;"  text="Start New Bill for Patient" textFill="WHITE" />
		</HBox>

		<TableView fx:id="billItemsTable" VBox.vgrow="ALWAYS">
			<columns>
				<TableColumn fx:id="descriptionColumn" prefWidth="400.0" sortable="false" style="-fx-background-color: #0f172a;" text="Service/Item Description" />
				<TableColumn fx:id="costColumn" prefWidth="150.0" style="-fx-background-color: #0f172a;" text="Cost" />
			</columns>
		</TableView>

		<HBox fx:id="addItemPane" alignment="CENTER_LEFT" disable="true" spacing="10">
			<Label text="New Item:" />
			<TextField fx:id="itemDescriptionField" promptText="Service or Item Description" HBox.hgrow="ALWAYS" />
			<Label text="Cost:" />
			<TextField fx:id="itemCostField" prefWidth="80" promptText="0.00" />
			<Button fx:id="addItemButton" onAction="#handleAddItem" styleClass="navigation-button" text="Add Item to Bill" />
		</HBox>

		<Separator />

		<GridPane hgap="10" vgap="10">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="Total Amount:" GridPane.halignment="RIGHT">
					<font><Font name="System Bold" size="16.0" /></font>
				</Label>
				<Label fx:id="totalAmountLabel" text="\$0.00" GridPane.columnIndex="1">
					<font><Font name="System Bold" size="16.0" /></font>
				</Label>

				<Label text="Payment Method:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
				<ComboBox fx:id="paymentMethodComboBox" prefWidth="200.0" promptText="Choose method" GridPane.columnIndex="1" GridPane.rowIndex="1" />
			</children>
		</GridPane>

		<Button fx:id="processBillButton" disable="true" maxWidth="Infinity" onAction="#handleProcessBill" styleClass="#0f172a" text="Generate and Process Bill" />

		<Label text="Processing Log:" />
		<TextArea fx:id="logArea" editable="false" prefHeight="100.0"  style="-fx-control-inner-background: #17213c; -fx-text-fill: #ffffff;" styleClass="navigation-button primary" wrapText="true" />
	</children>
</VBox>
