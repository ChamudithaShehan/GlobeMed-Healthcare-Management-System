<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="10" style="-fx-padding: 10;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.globemed.healthcare.controller.ReportController">
	<children>
		<Label styleClass="login-title" text="Medical Reports Generation">
			<font><Font name="System Bold" size="18.0" /></font>
		</Label>

		<GridPane hgap="10" vgap="10">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="Select Patient:" />
				<ComboBox fx:id="patientComboBox" prefWidth="250.0" promptText="Choose patient" GridPane.columnIndex="1" />

				<Label text="Report Type:" GridPane.rowIndex="1" />
				<ComboBox fx:id="reportTypeComboBox" prefWidth="250.0" promptText="Choose report type" GridPane.columnIndex="1" GridPane.rowIndex="1" />
			</children>
		</GridPane>

		<Button fx:id="generateButton" onAction="#handleGenerateReport" style="-fx-background-color: #17213c;" styleClass="navigation-button primary" text="Generate Report" />

		<Separator />

		<Label text="Generated Report:" />
		<TextArea fx:id="reportArea"  style="-fx-control-inner-background: #17213c; -fx-text-fill: white;" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
	</children>
</VBox>
