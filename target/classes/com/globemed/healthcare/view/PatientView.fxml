<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.globemed.healthcare.controller.PatientController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
            <children>
                <Label text="Search Patients:" />
                <TextField fx:id="searchField" promptText="Search by name or ID..." HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>
    <left>
        <TableView fx:id="patientsTable" prefWidth="800">
            <columns>

                <TableColumn fx:id="idColumn" prefWidth="80.0" styleClass="table-header-primary" text="Patient ID" />
                <TableColumn fx:id="firstNameColumn" prefWidth="100.0" styleClass="table-header-primary" text="First Name" />
                <TableColumn fx:id="lastNameColumn" prefWidth="100.0" styleClass="table-header-primary" text="Last Name" />
                <TableColumn fx:id="dobColumn" prefWidth="100.0" styleClass="table-header-primary" text="Date of Birth" />
                <TableColumn fx:id="genderColumn" prefWidth="80.0" styleClass="table-header-primary" text="Gender" />
                <TableColumn fx:id="phoneColumn" prefWidth="120.0" styleClass="table-header-primary" text="Phone" />
                <TableColumn fx:id="emailColumn" prefWidth="150.0" styleClass="table-header-primary" text="Email" />
                <TableColumn fx:id="addressColumn" prefWidth="200.0" styleClass="table-header-primary" text="Address" />
            </columns>
            <BorderPane.margin>
                <Insets right="10" />
            </BorderPane.margin>
        </TableView>
    </left>
    <center>

        <ScrollPane fitToWidth="true" style="-fx-background-color: #0f172a;">
            <content>
                <GridPane fx:id="detailsPane" hgap="10" style="-fx-background-color: #0f172a;" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Patient ID:" GridPane.rowIndex="0" />
                        <TextField fx:id="patientIdField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="First Name:" GridPane.rowIndex="1" />
                        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Last Name:" GridPane.rowIndex="2" />
                        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Date of Birth:" GridPane.rowIndex="3" />
                        <DatePicker fx:id="dobPicker" style="-fx-control-inner-background: #17213c; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="3" />


                        <Label text="Gender:" GridPane.rowIndex="4" />
                        <ComboBox fx:id="genderComboBox" prefHeight="33.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="Address:" GridPane.rowIndex="5" />
                        <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <Label text="Phone Number:" GridPane.rowIndex="6" />
                        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                        <Label text="Email:" GridPane.rowIndex="7" />
                        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="7" />


                        <Label style="-fx-border-color: #3498db;" text="Medical History:" textFill="WHITE" GridPane.rowIndex="8" />
                        <TextArea fx:id="medicalHistoryArea" style="-fx-control-inner-background: #17213c; -fx-text-fill: white;" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                        <Label text="Treatment Plan:" GridPane.rowIndex="9" />
                        <TextArea fx:id="treatmentPlanArea" mouseTransparent="true" style="-fx-control-inner-background: #17213c; -fx-text-fill: white;" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                    </children>
                </GridPane>
            </content>
        </ScrollPane>
    </center>
    <bottom>

        <HBox alignment="CENTER_RIGHT" prefHeight="99.0" prefWidth="517.0" spacing="10" style="-fx-padding: 10; -fx-background-color: #0f172a;">
            <children>
                <Button fx:id="newButton" onAction="#handleNew" styleClass="navigation-button" text="New Patient" />

                <Button fx:id="saveButton" onAction="#handleSave" style="-fx-background-color: #2ecc71;" styleClass="navigation-button primary" text="Save Changes" textFill="WHITE" />
                <Button fx:id="deleteButton" onAction="#handleDelete" styleClass="logout-button" text="Delete Patient" />
                <Button fx:id="undoButton" onAction="#handleUndo" styleClass="navigation-button" text="Undo Changes">
                    <graphic>
                        <FontIcon iconLiteral="fas-undo" iconSize="14" />
                    </graphic>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>
